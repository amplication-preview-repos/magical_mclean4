datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Conversation {
  createdAt    DateTime     @default(now())
  endTime      DateTime?
  id           String       @id @default(cuid())
  recordingUrl String?
  startTime    DateTime?
  transcripts  Transcript[]
  updatedAt    DateTime     @updatedAt
  user         User?        @relation(fields: [userId], references: [id])
  userId       String?
}

model Transcript {
  conversation   Conversation?   @relation(fields: [conversationId], references: [id])
  conversationId String?
  createdAt      DateTime        @default(now())
  id             String          @id @default(cuid())
  polishRequests PolishRequest[]
  speaker        String?
  text           String?
  timestamp      DateTime?
  updatedAt      DateTime        @updatedAt
}

model PolishRequest {
  createdAt    DateTime                 @default(now())
  id           String                   @id @default(cuid())
  result       Json?
  status       EnumPolishRequestStatus?
  transcript   Transcript?              @relation(fields: [transcriptId], references: [id])
  transcriptId String?
  updatedAt    DateTime                 @updatedAt
}

model User {
  conversations Conversation[]
  createdAt     DateTime       @default(now())
  email         String?        @unique
  firstName     String?
  id            String         @id @default(cuid())
  lastName      String?
  password      String
  roles         Json
  updatedAt     DateTime       @updatedAt
  username      String         @unique
}

enum EnumPolishRequestStatus {
  Option1
}
